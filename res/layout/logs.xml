<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- TOP -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <!-- LOGO -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon" />
        </LinearLayout>
        <!-- LOGO ENDS -->


        <!-- TITLE -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery Check"
                android:textColor="@android:color/black"
                android:textSize="40dp" />
        </LinearLayout>
        <!-- TITLE ENDS -->


        <!-- TABS -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- INFO -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtInfo_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="25dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="40dp" />
            <!-- LOGS -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtLogs_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logs"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
            
            <TextView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="40dp" />
            
             <!-- GRAPH -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtGraph_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Graph"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>
        <!-- TABS ENDS -->

    </LinearLayout>
    <!-- TOP END -->


    <!-- BODY -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical" >
        
        	
			<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >
            
			    
			      <TextView
                    android:id="@+id/colSerialnumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   
                    android:text="Sr.No."
                    android:textSize="20dp"
                    android:textStyle="bold" />
  
        

                <TextView
                    android:id="@+id/colStartTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   
                    android:text="Start Time"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colEndTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
    
                    android:text="End Time"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/colStartPercentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   
                    android:text="Start %"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colEndPercentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                
                    android:text="End %"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/colTimeDiff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                  
                    android:text="Time Diff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                

                <TextView
                    android:id="@+id/colPerCharged"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                  
                    android:text="% Charged"
                    android:textSize="20dp"
                    android:textStyle="bold" />
       
  </LinearLayout>
            

                <ListView
    	    android:id="@+id/listView"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >
    	</ListView>
    </LinearLayout>
    <!-- BODY END -->

</LinearLayout>